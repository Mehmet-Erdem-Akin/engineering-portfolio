  <script>
    // Image Slider
    let currentImageSlide = 0;
    const imageSlider = document.getElementById('image-slider');
    const imageDots = document.querySelectorAll('.image-slider-dot');
    const totalImageSlides = 3;

    function updateImageSlider() {
      if (imageSlider) {
        imageSlider.style.transform = `translateX(-${currentImageSlide * 100}%)`;
        imageDots.forEach((dot, index) => {
          if (index === currentImageSlide) {
            dot.classList.remove('bg-white/40');
            dot.classList.add('bg-white/80');
          } else {
            dot.classList.remove('bg-white/80');
            dot.classList.add('bg-white/40');
          }
        });
      }
    }

    document.getElementById('image-slider-next')?.addEventListener('click', () => {
      currentImageSlide = (currentImageSlide + 1) % totalImageSlides;
      updateImageSlider();
    });

    document.getElementById('image-slider-prev')?.addEventListener('click', () => {
      currentImageSlide = (currentImageSlide - 1 + totalImageSlides) % totalImageSlides;
      updateImageSlider();
    });

    imageDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentImageSlide = index;
        updateImageSlider();
      });
    });

    // Auto-play image slider
    setInterval(() => {
      currentImageSlide = (currentImageSlide + 1) % totalImageSlides;
      updateImageSlider();
    }, 5000);

    // Product Slider
    let currentProductSlide = 0;
    const productSlider = document.getElementById('product-slider');
    const productCards = productSlider?.children;
    const cardWidth = 320; // w-80 = 320px
    const gap = 24; // gap-6 = 24px

    function getVisibleCards() {
      return Math.floor((window.innerWidth - 64) / (cardWidth + gap)); // -64 for padding
    }

    function getMaxSlide() {
      if (!productCards) return 0;
      const visible = getVisibleCards();
      return Math.max(0, productCards.length - visible);
    }

    function updateProductSlider() {
      if (productSlider) {
        const translateX = currentProductSlide * (cardWidth + gap);
        productSlider.style.transform = `translateX(-${translateX}px)`;
      }
    }

    document.getElementById('product-slider-next')?.addEventListener('click', () => {
      const maxSlide = getMaxSlide();
      if (currentProductSlide < maxSlide) {
        currentProductSlide++;
        updateProductSlider();
      }
    });

    document.getElementById('product-slider-prev')?.addEventListener('click', () => {
      if (currentProductSlide > 0) {
        currentProductSlide--;
        updateProductSlider();
      }
    });

    // Update on window resize
    window.addEventListener('resize', () => {
      const maxSlide = getMaxSlide();
      if (currentProductSlide > maxSlide) {
        currentProductSlide = maxSlide;
      }
      updateProductSlider();
    });
  </script>
